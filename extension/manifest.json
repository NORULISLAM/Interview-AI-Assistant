{
    "manifest_version": 3,
    "name": "Interview AI Assistant",
    "version": "1.0.0",
    "description": "AI-powered interview assistant with real-time suggestions and transcription",
    "permissions": [
        "activeTab",
        "storage",
        "scripting",
        "tabs",
        "webNavigation"
    ],
    "host_permissions": [
        "https://meet.google.com/*",
        "https://teams.microsoft.com/*",
        "https://zoom.us/*",
        "https://*.zoom.us/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "https://meet.google.com/*",
                "https://teams.microsoft.com/*",
                "https://zoom.us/*",
                "https://*.zoom.us/*"
            ],
            "js": [
                "content.js"
            ],
            "css": [
                "content.css"
            ],
            "run_at": "document_end"
        }
    ],
    "action": {
        "default_popup": "popup.html",
        "default_title": "Interview AI Assistant"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "overlay.html",
                "overlay.js",
                "overlay.css"
            ],
            "matches": [
                "https://meet.google.com/*",
                "https://teams.microsoft.com/*",
                "https://zoom.us/*",
                "https://*.zoom.us/*"
            ]
        }
    ],
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}