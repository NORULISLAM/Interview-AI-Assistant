{
    "name": "interview-ai-frontend",
    "version": "1.0.0",
    "description": "Interview AI Assistant Desktop App",
    "main": "electron/dist/main.js",
    "scripts": {
        "dev": "concurrently -k \"npm:dev:renderer\" \"npm:dev:main\" \"npm:dev:electron\"",
        "dev:renderer": "vite",
        "dev:main": "tsc -p electron/tsconfig.json --watch",
        "dev:electron": "wait-on http://localhost:5173 && electron .",
        "build": "npm run build:renderer && npm run build:main",
        "build:renderer": "vite build",
        "build:main": "tsc -p electron/tsconfig.json",
        "start": "electron .",
        "dist": "npm run build && electron-builder --publish=never",
        "dev:electron:watch": "tsc -p electron/tsconfig.json --watch",
        "build:react": "vite build",
        "build:electron": "tsc -p electron/tsconfig.json",
        "pack": "npm run build && electron-builder",
        "lint": "eslint src --ext .ts,.tsx",
        "lint:fix": "eslint src --ext .ts,.tsx --fix"
    },
    "keywords": [
        "interview",
        "ai",
        "assistant",
        "electron",
        "speech-recognition"
    ],
    "author": "Interview AI Team",
    "license": "MIT",
    "devDependencies": {
        "@types/node": "^20.10.0",
        "@types/react": "^18.2.45",
        "@types/react-dom": "^18.2.18",
        "@typescript-eslint/eslint-plugin": "^6.14.0",
        "@typescript-eslint/parser": "^6.14.0",
        "@vitejs/plugin-react": "^4.7.0",
        "concurrently": "^8.2.2",
        "electron": "^38.2.2",
        "electron-builder": "^24.9.1",
        "eslint": "^8.55.0",
        "eslint-plugin-react": "^7.33.2",
        "eslint-plugin-react-hooks": "^4.6.0",
        "typescript": "^5.3.3",
        "vite": "^7.1.9",
        "wait-on": "^7.2.0"
    },
    "dependencies": {
        "@tanstack/react-query": "^5.14.2",
        "autoprefixer": "^10.4.16",
        "axios": "^1.12.2",
        "lucide-react": "^0.294.0",
        "postcss": "^8.4.32",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-hot-toast": "^2.4.1",
        "react-router-dom": "^6.20.1",
        "tailwindcss": "^3.3.6",
        "zustand": "^4.5.7"
    },
    "build": {
        "appId": "com.interviewai.assistant",
        "productName": "Interview AI Assistant",
        "directories": {
            "output": "dist-electron"
        },
        "files": [
            "dist/**/*",
            "electron/dist/**/*",
            "node_modules/**/*"
        ],
        "mac": {
            "category": "public.app-category.productivity",
            "target": "dmg"
        },
        "win": {
            "target": "nsis"
        },
        "linux": {
            "target": "AppImage"
        }
    }
}
